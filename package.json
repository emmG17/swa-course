{
	"name": "lumina",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"predev": "bun scripts/build-slides.ts --manifest-only",
		"dev": "vite dev",
		"build:slides": "bun scripts/build-slides.ts",
		"build": "bun run build:slides && vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint ."
	},
	"devDependencies": {
		"@eslint/compat": "^2.0.2",
		"@eslint/js": "^9.39.2",
		"@iconify-json/mdi": "^1.2.3",
		"@iconify/tailwind4": "^1.2.1",
		"@slidev/cli": "^52.12.0",
		"@sveltejs/adapter-auto": "^7.0.1",
		"@sveltejs/kit": "^2.52.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@tailwindcss/forms": "^0.5.11",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.2.0",
		"@types/node": "^24.10.13",
		"eslint": "^9.39.2",
		"eslint-plugin-svelte": "^3.15.0",
		"globals": "^17.3.0",
		"slidev-theme-vibe": "^1.0.1",
		"svelte": "^5.53.0",
		"svelte-check": "^4.4.1",
		"tailwindcss": "^4.2.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.56.0",
		"vite": "^7.3.1"
	},
	"dependencies": {
		"gray-matter": "^4.0.3",
		"svelte-adapter-bun": "^1.0.1"
	}
}
